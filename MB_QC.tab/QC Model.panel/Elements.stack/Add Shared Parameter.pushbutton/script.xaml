    <Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            mc:Ignorable="d" 
            Title="MainWindow" 
            Foreground="#000"
            Background="{x:Null}" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Height="250" Width="800" Margin="0"
            SizeToContent="Width"
            ShowInTaskbar="False"
            BorderThickness="0"
            WindowStartupLocation="CenterScreen"
            HorizontalContentAlignment="Center"
            UseLayoutRounding="False"
            FontFamily="Segoe UI"
            AllowsTransparency="True"
            WindowStyle="None"
            KeyDown="handleclick"
            MouseDown="handleclick">            
        <Border DockPanel.Dock="Left" BorderThickness="1"
            CornerRadius="15"
            Margin="20,20,20,20">
            <Border.Background>
                <SolidColorBrush Color="#fff"/>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="{DynamicResource pyRevitDarkColor}" BlurRadius="15" Opacity="0.25"/>
            </Border.Effect>
            <Grid Margin="20,20,20,20" x:Name="mainGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image x:Name="logo_img"
                   Source="https://static.wixstatic.com/media/265d8f_7ad74719d9bd4f65b91300b68c27ee8e~mv2.png/v1/fill/w_271,h_132,al_c,q_85,usm_0.66_1.00_0.01,enc_auto/logo-07.png"
                   Width="200" Height="200" />
                <StackPanel Grid.Column="1" HorizontalAlignment="Left">
                    <Label FontSize="16" FontWeight="Bold">Miss BIM Tools</Label>
                    <Label/>
                    <TextBlock TextWrapping="Wrap" MaxWidth="200" Margin="4">
                        This pyRevit extension was developed by Miss BIM.
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" MaxWidth="200" Margin="4">
                        For more information or tools requests, please contact us.
                    </TextBlock> 
                    <Label/>
                    <TextBlock Margin="4">           
                        <Hyperlink NavigateUri="http://www.missbim.co.il" Click="handle_url_click">
                            www.missbim.co.il
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

    </Window>